// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
   User
   Admin
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  password     String?
  firstName    String
  lastName     String
  role         UserRole @default(User)
  otp          String?
  otpExpiry    DateTime?
  questions    Question[]
  papers       QuestionPaper[]
  examinees    UserExamineeList[]
  examineeList ExamineeList[]
  tests        Test[]
  userTests    UserTest[]
  isActive     Boolean @default(true)
}

model Subject {
   id          Int      @id @default(autoincrement())
   title       String   @unique
   description String
   topics      Topic[]
}

model Topic {
   id          Int      @id @default(autoincrement())
   title       String   @unique
   description String
   subjectId   Int
   subject     Subject @relation(fields: [subjectId], references: [id])
   questions   QuestionTopic[]
   paperTopics QuestionPaperTopic[]
}

model QuestionTopic {
   id          Int  @id @default(autoincrement())
   topicId     Int
   topic       Topic @relation(fields: [topicId], references: [id])
   questionId  Int
   question    Question @relation(fields: [questionId], references: [id])
   @@unique([topicId, questionId])
}

enum QuestionLevel {
   Easy
   Medium
   Difficult
   Expert
}

model Question {
   id                Int   @id @default(autoincrement())
   text              String
   questionTopics    QuestionTopic[]
   options           Option[]
   userId            Int
   user              User @relation(fields: [userId], references: [id])
   randomize         Boolean @default(true)
   level             QuestionLevel @default(Easy)
   updatedAt         DateTime @updatedAt @default(now())
   createdAt         DateTime @default(now())
   sheets            AnswerSheet[]
   @@unique([id, userId])
}

model Option {
   id          Int      @id @default(autoincrement())
   text        String
   questionId  Int
   question    Question @relation(fields: [questionId], references: [id])
   isCorrect   Boolean
   sheets      AnswerSheet[]
}

model QuestionPaper {
   id          Int      @id @default(autoincrement())
   userId      Int
   user        User @relation(fields: [userId], references: [id])
   title       String
   updatedAt   DateTime @updatedAt @default(now())
   createdAt   DateTime @default(now())
   duration    Int @default(60)
   paperTopics QuestionPaperTopic[]
   @@unique([id, userId])
   tests       Test[]
}

model QuestionPaperTopic {
   id          Int      @id @default(autoincrement())
   paperId     Int
   paper       QuestionPaper @relation(fields: [paperId], references: [id])
   topicId     Int
   topic       Topic @relation(fields: [topicId], references: [id])
   level       QuestionLevel
   numberOfQuestions Int
}
   
model ExamineeList {
   id          Int     @id @default(autoincrement())
   userId      Int
   user        User @relation(fields: [userId], references: [id])
   title       String  @unique
   description String?
   examinees   UserExamineeList[]
   tests       Test[]
   @@unique([id, userId])
}

model UserExamineeList {
   id          Int     @id @default(autoincrement())
   listId      Int
   list        ExamineeList @relation(fields: [listId], references: [id])
   userId      Int
   user        User @relation(fields: [userId], references: [id])
   @@unique([listId, userId])
}

model Test {
   id          Int     @id @default(autoincrement())
   title       String
   startTime   DateTime
   endTime     DateTime
   userId      Int
   user        User @relation(fields: [userId], references: [id])
   paperId     Int
   paper       QuestionPaper @relation(fields: [paperId], references: [id])
   listId      Int
   list        ExamineeList @relation(fields: [listId], references: [id])
   updatedAt   DateTime @updatedAt @default(now())
   createdAt   DateTime @default(now())
   userTests   UserTest[]
   @@unique([userId, id])
}

model UserTest {
    id          Int     @id @default(autoincrement())
    testId      Int
    test        Test @relation(fields: [testId], references: [id])
    userId      Int
    user        User @relation(fields: [userId], references: [id])
    sheets      AnswerSheet[]
    startTime   DateTime?
    endTime     DateTime?
    @@unique([id, userId])
}

model AnswerSheet {
    id          Int     @id @default(autoincrement())
    userTestId  Int
    userTest    UserTest @relation(fields: [userTestId], references: [id])
    questionId  Int
    question    Question @relation(fields: [questionId], references: [id])
    answerId    Int?
    answer      Option? @relation(fields: [answerId], references: [id])
    updatedAt   DateTime @updatedAt @default(now())
    createdAt   DateTime @default(now())
    @@unique([id, userTestId])
}

